@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}


<section id="portfolio" class="portfolio">
    <div class="container">
        <h2 class="text-uppercase text-center text-secondary bounce animated" style="font-family: Cairo, sans-serif;">اخر المقالات</h2>
        <div>
            <nav class="navbar navbar-dark navbar-expand-lg bg-secondary navigation-clean-search" style="margin: 20px;">
                <div class="container">
                    <button data-bs-toggle="collapse" class="navbar-toggler" data-bs-target="#navcol-1"><span class="visually-hidden">Toggle navigation</span><span class="navbar-toggler-icon"></span></button>
                    <div class="collapse navbar-collapse" id="navcol-1">
                        <ul class="navbar-nav">
                            <li class="nav-item"></li>
                            <li class="nav-item"></li>
                            <li class="nav-item"></li>
                        </ul>
                        <form class="me-auto search-form" target="_self">
                            <div class="d-flex align-items-center"><label class="form-label d-flex mb-0" for="search-field"><i class="fa fa-search"></i></label><input class="form-control search-field" type="search" id="search-field" name="search" placeholder="ابحث عن مقالة" style="font-family: Cairo, sans-serif;"></div>
                        </form>
                        <ul class="navbar-nav">
                            @{
                                foreach (var item in Model.ListForCategory)
                                {
                                    <form method="get">
                                        <input type="hidden" value="ByCategory" name="LoadState" />
                                    <li class="nav-item">
                                        <input type="submit" class="form-control m-2" name="CategoryName" value="@item.Name" style="font-family: Cairo, sans-serif;">
                                    </li>
                                    </form>


                                }
                            }

                            <form method="get">
                                <input type="hidden" value="All" name="LoadState" />
                            <li class="nav-item">
                                <input type="submit" class="form-control m-2" name="CategoryName" value="All" style="font-family: Cairo, sans-serif;">
                            </li>
                            </form>



                        </ul>
                    </div>
                </div>
            </nav>
        </div>
        <hr class="star-dark mb-5">



        <div class="row row-cols-3">
            
            @{ 
                foreach (var item in Model.ListForPost)
                {
                        <div class="col" data-bss-hover-animate="pulse" style="margin: 0;margin-top: 10px;">
                            <div class="card" style="margin: 10;">
                                <img class="card-img-top w-100 d-block" src="~/Images/@item.PostImageUrl">
                                <div class="card-body">
                                    <h4 class="text-center card-title" style="font-family: Cairo, sans-serif;">@item.PostTitle</h4><a class="btn btn-primary float-end" role="button" style="font-family: Cairo, sans-serif;width: 149.875px;" href="/Article">قراءة</a>
                                </div>
                            </div>
                        </div>
                }
            }
            

            
            


        </div>
    </div>



    <nav class="text-center float-end" style="font-family: Lato, sans-serif;border-color: var(--bs-red);margin: 10px;">
        <ul class="pagination">
            <li class="page-item text-center" style="text-align: center;"><a class="page-link" href="#" aria-label="Previous"><span aria-hidden="true">«</span></a></li>
            <li class="page-item text-center" style="text-align: center;"><a class="page-link" href="#">1</a></li>
            <li class="page-item text-center" style="text-align: center;"><a class="page-link" href="#">2</a></li>
            <li class="page-item text-center" style="text-align: center;"><a class="page-link" href="#">3</a></li>
